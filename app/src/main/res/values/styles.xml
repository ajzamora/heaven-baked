<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CustomExoPlayerView">
        <item name="android:layout_width">@dimen/no_dp</item>
        <item name="android:layout_height">@dimen/no_dp</item>
        <item name="android:layout_marginLeft">@dimen/no_dp</item>
        <item name="android:layout_marginTop">@dimen/no_dp</item>
        <item name="android:layout_marginRight">@dimen/no_dp</item>
        <item name="android:layout_marginBottom">@dimen/no_dp</item>
    </style>

    <style name="CustomExoPlayerViewTextDetails">
        <item name="android:layout_marginTop">@dimen/custom_exoplayerview_text_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/custom_exoplayerview_text_view_margin</item>
        <item name="android:layout_marginRight">@dimen/custom_exoplayerview_text_view_margin</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:lineSpacingExtra">@dimen/custom_exoplayerview_text_view_lines_pacing</item>
        <item name="android:textSize">@dimen/custom_exoplayerview_text_view_size</item>
    </style>
    <!-- ExoPlayer Styles -->
    <style name="CustomExoMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/video_view_exo_player_play_pause_button_dimen</item>
        <item name="android:layout_height">@dimen/video_view_exo_player_play_pause_button_dimen</item>
    </style>

    <style name="CustomExoMediaButton.Play">
        <item name="android:src">@drawable/ic_play_circle_filled</item>
    </style>

    <style name="CustomExoMediaButton.Pause">
        <item name="android:src">@drawable/ic_pause_circle_filled</item>
    </style>
</resources>
